.internal--page__wrapper.dashboard-page
  .container
    .row
      .col-md-10.col-md-offset-1
        h1 MicroSaas
        .panel.panel-default.col-md-5
          .panel-body
            |  
            p 
              strong Main Address: 
              | {{user}}
            p 
              strong UST: 
              br
              | {{balance}}
        .col-md-7
          a.btn.btn-primary.pull-right(href="/swap/new", ng-show="name == 'Dom'")
            span.glyphicon.glyphicon-plus 
            &nbsp;
            | New Contract

    .row
      .col-md-10.col-md-offset-1

        h3(ng-show="quotes.length == 0 ") No quotes yet

        table.table.table-striped(ng-show=" quotes.length >= 1 ")
          thead
            tr
              th Contract ID
              th Contract Name 
              th Products
              th Price
              th Status
          tbody
            tr(ng-repeat="contract in contracts | orderBy: 'stateInt'")
              td 
                a(href="/swap/{{contract.address}}/issuance") {{contract.id}} 
              td {{contract.contractName}}
              td {{contract.contractProducts}}
              td {{contract.contractPrice}}
              td(ng-show="contract.stateInt < 5") OPEN 
              td(ng-show="contract.stateInt == 5") CLOSED 
        

